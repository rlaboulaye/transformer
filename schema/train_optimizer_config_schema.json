        },
        "lr_init": {
            "$ref": "#/definitions/lr_init"
        },
        "meta_lr": {
            "$ref": "#/definitions/meta_lr"
        },
        "meta_epochs": {
            "$ref": "#/definitions/meta_epochs"
        },
        "base_epochs": {
            "$ref": "#/definitions/base_epochs"
        },
        "seed": {
