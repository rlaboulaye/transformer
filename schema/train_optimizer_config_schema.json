{
    "$schema": "http://json-schema.org/draft-04/schema",
    "definitions": {
        "train_config_path": {
            "type": "string",
            "description": "The path to the config file for training the base model"
        },
        "keep_coef_init": {
            "type": "number",
            "description": "The initialization of the parameter-preserving coefficient"
        },
        "lr_init": {
            "type": "number",
            "description": "The initialization of the learning rate"
        },
        "meta_lr": {
            "type": "number",
            "description": "The learning rate for the meta optimizer"
        },
        "meta_epochs": {
            "type": "integer",
            "description": "The number of training epochs for the optimizer"
        },
        "base_epochs": {
            "type": "integer",
            "description": "The number of training epochs for the base model"
        },
        "seed": {
            "type": "integer",
            "description": "The random seed"
        }
    },
    "properties": {
